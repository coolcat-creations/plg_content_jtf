<?xml version="1.0" encoding="UTF-8"?>
<form orientation="horizontal">
	<fieldset name="block1">
		<field name="name"
		       type="text"
		       icon="uk-icon-user"
		       maxlength="60"
		       description="JTF_NAME_DESC"
		       label="JTF_NAME_LABEL"
		       filter="string"
		       required="true"
		/>
		<field name="email"
		       type="email"
		       icon="uk-icon-envelope-o"
		       maxlength="60"
		       description="JTF_EMAIL_DESC"
		       label="JTF_EMAIL_LABEL"
		       filter="string"
		       validate="email"
		       required="true"
		/>
		<field name="subject"
		       type="text"
		       icon="uk-icon-pencil"
		       maxlength="60"
		       description="JTF_SUBJECT_DESC"
		       label="JTF_SUBJECT_LABEL"
		       filter="string"
		       required="true"
		/>
		<field name="message"
		       type="textarea"
		       cols="60"
		       rows="10"
		       description="JTF_MESSAGE_DESC"
		       label="JTF_MESSAGE_LABEL"
		       filter="safehtml"
		       required="true"
		/>
	</fieldset>
</form>