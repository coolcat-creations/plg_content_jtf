<?xml version="1.0" encoding="UTF-8"?>
<form orientation="stacked">
	<fieldset name="test">
		<field name="name"
		       type="text"
		       gridgroup="test"
		       icon="glyphicon glyphicon-user"
		       size="30"
		       description="JTF_NAME_DESC"
		       label="JTF_NAME_LABEL"
		       filter="string"
		       required="true"
		/>
		<field name="email"
		       type="email"
		       icon="glyphicon glyphicon-envelope"
		       size="30"
		       description="JTF_EMAIL_DESC"
		       label="JTF_EMAIL_LABEL"
		       filter="string"
		       validate="email"
		       required="true"
		/>
		<field name="subject"
		       type="text"
		       class="col-sm-12"
		       size="60"
		       description="JTF_SUBJECT_DESC"
		       label="JTF_SUBJECT_LABEL"
		       filter="string"
		       required="true"
		/>
		<field name="message"
		       type="textarea"
		       cols="50"
		       rows="10"
		       description="JTF_MESSAGE_DESC"
		       label="JTF_MESSAGE_LABEL"
		       filter="safehtml"
		       required="true"
		/>
	</fieldset>
	<fieldset>
		<field name="vorname"
		       type="text"
		       icon="glyphicon glyphicon-user"
		       size="30"
		       description="JTF_VNAME_DESC"
		       label="JTF_VNAME_LABEL"
		       required="true"
		/>
	</fieldset>
</form>