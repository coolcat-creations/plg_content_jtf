<?xml version="1.0" encoding="UTF-8"?>
<form orientation="horizontal"
      gridlabel="col-sm-3"
      gridfield="col-sm-8"
>
	<fieldset name="block1">
		<field name="name"
		       type="text"
		       icon="glyphicon glyphicon-user"
		       maxlength="60"
		       description="JTF_NAME_DESC"
		       label="JTF_NAME_LABEL"
		       filter="string"
		       required="true"
		/>
		<field name="email"
		       type="email"
		       icon="glyphicon glyphicon-envelope"
		       maxlength="60"
		       description="JTF_EMAIL_DESC"
		       label="JTF_EMAIL_LABEL"
		       filter="string"
		       validate="email"
		       required="true"
		/>
		<field name="subject"
		       type="text"
		       icon="glyphicon glyphicon-pencil"
		       maxlength="60"
		       description="JTF_SUBJECT_DESC"
		       label="JTF_SUBJECT_LABEL"
		       filter="string"
		       required="true"
		/>
		<field name="message"
		       type="textarea"
		       cols="30"
		       rows="10"
		       description="JTF_MESSAGE_DESC"
		       label="JTF_MESSAGE_LABEL"
		       filter="safehtml"
		       required="true"
		/>
	</fieldset>
	<fieldset name="consent_form"
	          label="JTF_CONSENT_FORM"
	>
		<field name="privacy_policy"
		       type="checkboxes"
		       description=""
		       label="JTF_PRIVACY_POLICY_LABEL"
		       default=""
		       validate="options"
		       filter="string"
		       required="true"
		>
			<option value="JYES">JTF_PRIVACY_POLICY_OPTION_ACCEPT</option>
		</field>
	</fieldset>
</form>