<?xml version="1.0" encoding="UTF-8"?>
<form class="form-horizontal">
	<fieldset>
		<field name="name"
		       type="text"
		       gridgroup="test"
		       icon="icon-user"
		       maxlength="30"
		       description="JTF_NAME_DESC"
		       label="JTF_NAME_LABEL"
		       filter="string"
		       required="1"
		/>
		<field name="email"
		       type="email"
		       icon="icon-envelope"
		       maxlength="30"
		       description="JTF_EMAIL_DESC"
		       label="JTF_EMAIL_LABEL"
		       filter="string"
		       validate="email"
		       required="true"
		/>
		<field name="subject"
		       type="text"
		       maxlength="60"
		       description="JTF_SUBJECT_DESC"
		       label="JTF_SUBJECT_LABEL"
		       filter="string"
		       required="true"
		/>
		<field name="message"
		       type="textarea"
		       cols="50"
		       rows="10"
		       description="JTF_MESSAGE_DESC"
		       label="JTF_MESSAGE_LABEL"
		       filter="safehtml"
		       required="true"
		/>
	</fieldset>
</form>