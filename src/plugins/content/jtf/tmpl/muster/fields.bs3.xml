<?xml version="1.0" encoding="UTF-8"?>
<form class="form-horizontal"
      gridlabel="col-sm-3"
      gridfield="col-sm-9"
>
	<fieldset>
		<field name="anrede"
		       type="list"
		       icon="glyphicon glyphicon-list"
		       description="JTF_ANREDE_DESC"
		       label="JTF_ANREDE_LABEL"
		       default=""
		       validate="options"
		       required="true"
		       optionclass=""
		       optionlabel="inline"
		>
			<option labelclass="test" value="">JTF_ANREDE_OPTION_NONE</option>
			<option value="JTF_ANREDE_OPTION_HERR">JTF_ANREDE_OPTION_HERR</option>
			<option value="JTF_ANREDE_OPTION_FRAU">JTF_ANREDE_OPTION_FRAU</option>
		</field>
		<field name="active_vn"
		       type="radio"
		       icon="glyphicon glyphicon-list"
		       description="JTF_VNAME_DESC"
		       label="JTF_VNAME_LABEL"
		       default="0"
		       validate="options"
		       optionlabel="radio-inline"
		       notmail="1"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="vorname"
		       type="text"
		       icon="glyphicon glyphicon-user"
		       maxlength="30"
		       description="JTF_VNAME_DESC"
		       label="JTF_VNAME_LABEL"
		       required="true"
		       showon="active_vn:1"
		/>
		<field name="nachname"
		       type="text"
		       icon="glyphicon glyphicon-user"
		       maxlength="30"
		       description="JTF_NAME_DESC"
		       label="JTF_NAME_LABEL"
		       required="true"
		/>
		<field name="email"
		       type="email"
		       icon="glyphicon glyphicon-envelope"
		       maxlength="30"
		       description="JTF_EMAIL_DESC"
		       label="JTF_EMAIL_LABEL"
		       validate="email"
		       required="true"
		/>
		<field name="tel"
		       type="tel"
		       icon="glyphicon glyphicon-headphones"
		       maxlength="30"
		       description="JTF_TEL_DESC"
		       label="JTF_TEL_LABEL"
		       validate="tel"
		/>
		<field name="subject"
		       type="text"
		       icon="glyphicon glyphicon-info-sign"
		       maxlength="30"
		       description="JTF_SUBJECT_DESC"
		       label="JTF_SUBJECT_LABEL"
		       required="true"
		/>
		<field name="message"
		       type="textarea"
		       icon="glyphicon glyphicon-pencil"
		       cols="25"
		       rows="10"
		       description="JTF_MESSAGE_DESC"
		       label="JTF_MESSAGE_LABEL"
		       required="true"
		/>
	</fieldset>
</form>