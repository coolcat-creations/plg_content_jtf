<?xml version="1.0" encoding="UTF-8"?>
<form class="form-horizontal"
      gridlabel="col-sm-3"
      gridfield="col-sm-9"
>
	<fieldset>
		<field name="anrede"
		       type="list"
		       icon="glyphicon glyphicon-th-list"
		       description="JTF_ANREDE_DESC"
		       label="JTF_ANREDE_LABEL"
		       default=""
		       validate="options"
		       required="true"
		>
			<option value="">JTF_ANREDE_OPTION_NONE</option>
			<option value="JTF_ANREDE_OPTION_HERR">JTF_ANREDE_OPTION_HERR</option>
			<option value="JTF_ANREDE_OPTION_FRAU">JTF_ANREDE_OPTION_FRAU</option>
		</field>
		<field name="vorname"
		       type="text"
		       icon="glyphicon glyphicon-user"
		       size="30"
		       description="JTF_VNAME_DESC"
		       label="JTF_VNAME_LABEL"
		       required="true"
		/>
		<field name="nachname"
		       type="text"
		       icon="glyphicon glyphicon-user"
		       size="30"
		       description="JTF_NAME_DESC"
		       label="JTF_NAME_LABEL"
		       required="true"
		/>
		<field name="email"
		       type="email"
		       icon="glyphicon glyphicon-envelope"
		       size="30"
		       description="JTF_EMAIL_DESC"
		       label="JTF_EMAIL_LABEL"
		       validate="email"
		       required="true"
		/>
		<field name="tel"
		       type="tel"
		       size="30"
		       description="JTF_TEL_DESC"
		       label="JTF_TEL_LABEL"
		       validate="tel"
		/>
		<field name="subject"
		       type="text"
		       size="30"
		       description="JTF_SUBJECT_DESC"
		       label="JTF_SUBJECT_LABEL"
		       required="true"
		/>
		<field name="message"
		       type="textarea"
		       cols="25"
		       rows="10"
		       description="JTF_MESSAGE_DESC"
		       label="JTF_MESSAGE_LABEL"
		       required="true"
		/>
	</fieldset>
</form>